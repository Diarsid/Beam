<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    
    <!--
        Java Virtual Machine (TM) options.
        
        Change, add or remove options only in case you
        have clear understanding what you are doing.
    -->
    <jvm-options>
        <beam-core>
            <option>-Xms25m</option>
            <option>-Xmx25m</option>
            <option>-XX:MaxHeapFreeRatio=10</option>
            <option>-XX:MinHeapFreeRatio=10</option>
        </beam-core>
        <beam-system-console>
            <option>-Xms3m</option>
            <option>-Xmx3m</option>
            <option>-XX:MaxHeapFreeRatio=10</option>
            <option>-XX:MinHeapFreeRatio=10</option>
        </beam-system-console>
    </jvm-options>

    <!--
        Java Classpath.
        Do NOT change these options!
    -->
    <classpath>
        <beam-core>
            <element>Beam.jar</element>
            <element>./../lib/h2-1.3.176.jar</element>
            <element>./../lib/gem-injector-1.0.jar</element>
            <element>./../lib/json-simple-1.1.1.jar</element>
            <element>./../lib/javax.servlet-api-3.1.0.jar</element>
            <element>./../lib/jetty-http-9.3.6.v20151106.jar</element>
            <element>./../lib/http2-common-9.3.6.v20151106.jar</element>
            <element>./../lib/http2-hpack-9.3.6.v20151106.jar</element>
            <element>./../lib/http2-server-9.3.6.v20151106.jar</element>
            <element>./../lib/jetty-io-9.3.6.v20151106.jar</element>
            <element>./../lib/jetty-server-9.3.6.v20151106.jar</element>
            <element>./../lib/jetty-util-9.3.6.v20151106.jar</element>
            <element>./../lib/jetty-servlet-9.3.6.v20151106.jar</element>
            <element>./../lib/jetty-security-9.3.6.v20151106.jar</element>
            <element>./../lib/log4j-1.2.17.jar</element>
            <element>./../lib/slf4j-api-1.7.21.jar</element>
            <element>./../lib/slf4j-log4j12-1.7.21.jar</element>
        </beam-core>
        <beam-system-console>
            <element>Beam.jar</element>
            <element>./../lib/gem-injector-1.0.jar</element>
        </beam-system-console>
    </classpath>
    
    <!-- 
        Program resources (case, forward slash and backslash insentive).

        - images     Points place where all pictures used by the program are
                     placed. Do not change this entry without replacing all
                     files in a new directory.
        - programs   Shortcuts, *.exe, *.bat and any other executable files
                     placed in this directory are visible for the program
                     and could be executed by "run %programname%" command.
        - notes      A directory where plain .txt files and directories
                     could be stored, created and opened.
    -->
    <resources>
        <images>./../res/images/</images>
        <programs>D:/SOUL/Space/Program_links</programs>
        <notes>D:/content/notes</notes>
    </resources>
    
    <!--
        Java RMI settings. (case sensitive)
        
        The Java RMI mechanism is used to create a connection between
        the main program and its external console. The main program
        does not have any other input interface but its console.

        The program console can be closed and started again - it will
        not affect the main program. The Main program will still work
        if the console is closed.

        You are allowed to change these settings if you want.
        Both main program and console read them one time before start
        their work and do not read them again later. If these parameters
        are changed while the main program is running and the console isn't,
        it will be impossible to connect the console to the main program
        until it will be terminated and started again.
    -->
    <rmi-info>        
        <beam-system-console host="127.0.0.1" port="43015">
              <console-rmi-name>console</console-rmi-name>
        </beam-system-console>
        <beam-core host="127.0.0.1" port="43016">
              <access-rmi-name>RemoteAccess</access-rmi-name>
              <task-manager-rmi-name>TaskManager</task-manager-rmi-name>
              <executor-rmi-name>Executor</executor-rmi-name>
              <locations-rmi-name>LocationsHandler</locations-rmi-name>
              <web-pages-rmi-name>WebPagesHandler</web-pages-rmi-name>
        </beam-core>
    </rmi-info>
    
    <logging>
        
    </logging> 
    
    <!--
        Addresses for a web access to a web server embedded in the main
        program.
        Provide same web resources through both local and internet
        addresses. In order to disable a connectivity through
        the particular address it is required to set both address
        attributes to value "".
        Internet address should be the valid machine IP-address.
     -->
    <web>
         <local-address host="127.0.0.1" port="35001"/>
         <internet-address host="192.168.1.33" port="35002"/>
         <context-path>/beam/core</context-path>
    </web>
    
    <!--
        Main program database connection settings. (case sensitive)

        In order to provide a specified database connection, fill
        subsequent properties with values required for particular Database.

        H2 Database (Embedded mode):
            <db-name>H2</db-name>
            <db-location>./../data/BeamData</db-location>
            <jdbc-url>jdbc:h2:</jdbc-url>
            <jdbc-driver>org.h2.Driver</jdbc-driver>

        SQLite Database (Embedded):
            Not implemented yet.
            
    -->
    <databases>
        <core>
            <db-name>H2</db-name>
            <db-location>./../res/data/BeamData</db-location>
            <jdbc-url>jdbc:h2:</jdbc-url>
            <jdbc-driver>org.h2.Driver</jdbc-driver>
        </core>       
    </databases>                              
</configuration>
























